@model IEnumerable<LKPatients.Models.MedicationType>

@{
    ViewData["Title"] = "List of Medication Types";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New Medication Type</a>
   <a style="color:red;" class="font-weight-bolder">@TempData["Info"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
       <a asp-controller="LKMedications" asp-action="Index" asp-route-medicationTypeId="@item.MedicationTypeId">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MedicationTypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MedicationTypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MedicationTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
